
<div class="item row">
<div class="col-md-6">
  <% if current_user.provider.nil? %>
    <h2>Hello, <%= current_user.username %>!</h2>
  <% else %>
    <h2>Hello, <%= current_user.name %>!</h2>
    <img class="img-circle" src=<%=current_user.picture %> >
  <% end %>

</div>



  <table class="table text-center">
     <% @campground.each_slice(3) do |campgrounds| %>
       <tbody>
           <% campgrounds.each do |campground| %>
             <td><%= image_tag("#{campground.picture}") %><br><%= link_to "#{campground.name}", campground_path(campground) %></td>
           <% end %>
       </tbody>
     <% end %>
  </table>




<button class="btn"><%= link_to 'Edit Your Profile', edit_user_registration_path %></button>
</div>
