
<div class="showcase row">
  <div class="header"><h1 class="text-center"><%= link_to "#{@campground.name}", "#{@campground.detail.reservation_url}"%>
    <%if current_user %>
    <%if found_favorite(current_user, @campground)%>
    <%= link_to '<i class="fa fa-lg fa-heart"></i> Unfavorite'.html_safe, favorite_campground_path(@campground), method: :post, class:"btn btn-info btn-sm"%>
    <%else%>
    <%= link_to '<i class="fa fa-lg fa-heart"></i> Favorite'.html_safe, favorite_campground_path(@campground), method: :post, class:"btn btn-info btn-sm"%>
    <% end %></h1>
    <%end%>
  </div>


  <div class="container">
    <div class="col-md-12">
      <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <div class="col-lg-12">
              <img class="img-responsive" src=<%="#{@google_urls[0]}"%> alt="First slide">
            </div>
          </div>
          <% @google_urls.drop(1).each do |url|%>
          <div class="item">
            <div class="col-lg-12">
              <img class="img-responsive" src="<%= url %>" alt="Other slide">
            </div>
          </div>
          <%end%>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
      </div>
    </div>
  </div>
<br>
</div>
  <!-- OTHER -->


  <!-- CONTAINER FOR MAP AND DETAIL -->
  <div class="map-detail-row row">

    <!-- BEGIN DETAIL CONTAINER -->
    <div class="showcase container col-lg-8"><h3>Detail Container</h3>
      <div class="row">
        <article class="description col-md-12">
          <p><%=@campground.detail.description%></p>
        </article>
      </div>
      <div class="row">
        <article class="description col-md-12">
          <p><%=@campground.detail.orientation_description%></p>
        </article>
      </div>
      <div class="row">
        <article class="description col-md-12">
          <p><%=@campground.detail.recreation_description%></p>
        </article>
      </div>
      <div class="row">
        <article class="description col-md-12">
          <p><%=@campground.detail.facilities_description%></p>
        </article>
      </div>
      <div class="row">
        <article class="description col-md-12">
          <h3>Important Info:</h3>
          <ul>
            <%@campground.detail.important_info.split("\n").each do |info|%>
            <li><%=info%></li>
            <%end%>
          </ul>
        </article>
      </div>
    </div>
    <!-- BEGIN MAP CONTAINER -->
    <div class="showcase container col-lg-4"><h3>Location:</h3>
     <div class="row">
      <div class="col-md-12">
       <div id="map" style='width: 100%; height: 400px;'></div>
       <br>
     </div>
   </div>

   <!--AMENTITIES ROW/CONTAINER -->
   <%= render "campgrounds/amenities" %>

   <div class="row">
     <h2>put reviews here</h2>
   </div>
 </div>
 <!-- CLOSE MAP-DETAIL CONTAINER -->
</div>


<script>
 var campground = <%= @show.html_safe %>;
 initMap(campground);
</script>



